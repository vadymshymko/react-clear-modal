    "lint-staged": ">=13.1.0",
    "prettier": "3.5.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rollup": "^4.6.1",
    "tslib": "^2.5.0",
    "typescript": "^5.0.2"
